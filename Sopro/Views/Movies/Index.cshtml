@model IEnumerable<Sopro.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary"})
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th> 
            <th>Release Date</th>
            <th>Movie Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Title, "Edit", "Movies", new { id = movie.Id }, null)</td>

                    <td>@movie.ReleaseDate</td>
                    <td>@Html.ActionLink("Details", "Details", "Movies", new { id = movie.Id }, null)</td>

                </tr>
           }
            
    </tbody>
</table>